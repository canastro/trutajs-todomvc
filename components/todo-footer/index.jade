template#template
    style
        include style.css

    .todoapp
        span.todo-count
            strong(
                es-bindable
            ) ${remainingCount} item left

        ul.filters
            li
                a(ng-class="{selected: status == ''} ", href='#/') All

            li
                a(ng-class="{selected: status == 'active'}", href='#/active') Active

            li
                a(ng-class="{selected: status == 'completed'}", href='#/completed') Completed

        button.clear-completed(ng-click='clearCompletedTodos()', ng-show='completedCount') Clear completed


script
    include script.js
